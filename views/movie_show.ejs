<!DOCTYPE html>
<html lang="en" class="backgroundColor">
  <head>
  
  	<% include partials/head.ejs %>
    	
  </head>
  <body>
  	<% include partials/header.ejs%>

  	<div class="backgroundColor">
	  <div id="jumbo-image-show" style="background-image: url('/images/<%= movie.hero_image%>')">
	  	<h1 id="jumbo-title"><%= title %></h1>
	  </div>
    	
    	<div class="content-padding clearfix">
    		<div class="poster-wrapper">
    			<img src="/images/<%= movie.poster%>" class="img-responsive">
    		</div>
    	
	    	<div class="description-wrapper">
	    		<div class="description">
	    			<h2 class="movie-header">Description</h2>
	    			<p><%= movie.description%></p>
	    		</div>
	    	</div>

	    	<div class="main-characters">
	    		<h2 class="movie-header">Main Characters</h2>
	    		<ul>
	    			<% for (var i=0; i  < main_characters.length; i++) {%>
	    				<li><%= main_characters[i]%></li>
	    			<% } %>
	    		</ul>
	    	</div>
    	</div>


   	 	<% include partials/footer.ejs %>
    	<% include partials/scripts.ejs %> 
    </div>
  </body>
</html>
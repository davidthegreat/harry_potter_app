<!DOCTYPE html>
<html lang="en" class="backgroundColor">
  <head>
  
  	<% include partials/head.ejs %>
    	
  </head>
  <body>
  	<% include partials/header.ejs%>
    <div class="backgroundColor">
	  <div id="jumbo-image">
	  	<h1 id="jumbo-title"><%= title%></h1>
	  </div>

  <div id="posters-wrapper" class="content-padding clearfix">

     <% for (var i=0; i < movies.length; i++) {%>
     	<div class="poster">

        <a href="/harry_potter/<%= movies[i].part%>">
      		<img src="/images/<%= movies[i].poster %>" class="img-responsive">

      		<div class="poster-info-overlay">
      			<h3><%= movies[i].title %></h3>
      			<h4>View More <i class="fa fa-arrow-right"></i></h4>
      		</div>
        </a>
    	</div>
  	<% } %>

  </div>
    	


    <% include partials/footer.ejs %>
    <% include partials/scripts.ejs %> 
    </div>
  </body>
</html>